<!DOCTYPE html>
<html>
<head>
  <title>Sistema Escolar</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body data-spy="scroll" data-target=".bs-docs-sidebar">
<!-- Navbar ================================================== -->
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="nav-collapse collapse">
        <ul class="nav">
          <li class="menu_principal" id="alunos">
            <%= link_to 'Alunos', alunos_path %>
          </li>
          <li class="menu_principal" id="professores">
            <%= link_to 'Professores', professors_path %>
          </li>
          <li class="menu_principal" id="turmas">
            <%= link_to 'Turmas', turmas_path %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>

<!-- Conteudo ================================================== -->

<div class="container">
  <br /><br /><br />
  <div  id="flash_notice">
    <% flash.each do |key, value| %>
        <div class="alert alert-success fade in">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true" style="padding:3px 6px 0 0;">Ã—</button>
          <%= value %>
        </div>
    <% end %>
    <% flash.discard %>
  </div>
  <%= yield %>
</div>

<!-- Footer ================================================== -->

<footer class="footer">
  <div class="container">
    <p class="pull-right"><a href="#">Topo</a></p>
    <p>Sistema Escolar 2013.</p>
  </div>
</footer>

<script>
    $(".menu_principal").removeClass( "active" );
    $(menu).addClass( "active" );
</script>
</body>
</html>
